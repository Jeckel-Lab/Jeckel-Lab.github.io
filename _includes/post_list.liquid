<ul>
    {%- for post in site.posts -%}
        {% unless include.filter %}
        <li>{% include date.liquid date=post.date %} <a href="{{ post.url | relative_url }}">{{ post.title | escape }}</a>{% if post.draft %} [Draft]{% endif %}</li>
        {% endunless %}
        {% if post.tags contains include.filter %}
        <li>{% include date.liquid date=post.date %} <a href="{{ post.url | relative_url }}">{{ post.title | escape }}</a></li>
        {% endif %}
    {%- endfor -%}
</ul>

